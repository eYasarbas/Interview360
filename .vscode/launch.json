{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Interview360.WebAPI",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Interview360.WebAPI/bin/Debug/net8.0/Interview360.WebAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Interview360.WebAPI",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
} 